<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Reecod" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/body_bg</item>
        <item name="colorPrimaryDark">@color/element_bg</item>
        <item name="colorAccent">@color/save_btn_bg</item>
        <item name="android:windowBackground">@color/body_bg</item>
        <!-- Customize your dark theme here. -->
        <!-- <item name="colorPrimary">@color/my_dark_primary</item> -->
    </style>
    <!--  Floating Action Button Style Start  -->
    <style name="fab_rounded" parent="Widget.Material3.FloatingActionButton.Primary">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
    <!-- Floating action button end -->
<!-- Alert Dialog Style Start   -->
    <style name="MaterialAlertDialog" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="colorSurface">@color/white</item>
        <item name="materialAlertDialogTitleTextStyle">@style/AlertDialogTitleText</item>
        <item name="materialAlertDialogBodyTextStyle">@style/AlertDialogBodyText</item>
        <item name="checkedTextViewStyle">@style/AlertDialogTitleText</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
    </style>
    <style name="AlertDialogTitleText" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AlertDialogBodyText" parent="MaterialAlertDialog.MaterialComponents.Body.Text">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="PositiveButtonStyle" parent="@style/Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/white</item>
        <!--        <item name="backgroundTint">#00f</item>-->
    </style>

    <style name="NegativeButtonStyle" parent="@style/Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/black</item>
        <!--        <item name="backgroundTint">@color/secondaryColor</item>-->
    </style>
<!-- Alert Dialog Style end   -->
</resources>